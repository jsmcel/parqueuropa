# ========================================
# CONFIGURACIÓN PARA ethcuela.es/guideitor
# ========================================

# Entorno
NODE_ENV=production
LOG_LEVEL=info

# Servidor
BACKEND_PORT=3000
HOST=0.0.0.0
TRUST_PROXY=1

# Base de Datos
MONGODB_URI=mongodb://127.0.0.1:27017/guideitor_prod

# Modelos de Machine Learning
MODEL_PATH=models/swin_t_best_model.onnx
SECONDARY_MODEL_PATH=models/efficientnet_b0_model.onnx
LABELS_PATH=embeddings/dataset_embeddings.json

# Configuración de Reconocimiento
IMG_SIZE=224
SIMILARITY_THRESHOLD=0.8
SIMILARITY_THRESHOLD_SECONDARY=0.7
SUGGESTION_THRESHOLD=0.3
TOP_N_SUGGESTIONS=3

# Archivos de Audio
AUDIO_DIR=public/audio

# Seguridad - Configurado para tu dominio
CORS_ORIGIN=https://guideitor.ethcuela.es,https://parqueuropa.guidaitor.es,https://parqueuropa.ethcuela.es,https://parqueuropa.guidaitor.es,https://guidaitor.es
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache
CACHE_TTL=3600
ENABLE_PREDICTION_CACHE=true 

