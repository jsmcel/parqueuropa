# Configuración del Backend Multi-Tenant

# Puerto del backend
BACKEND_PORT=3000

# Base de datos MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/guideitor

# Configuración de Tenants
DEFAULT_TENANT=museo_ferrocarril
TENANTS_CONFIG_PATH=config/tenants.json

# Configuración de modelos ONNX (se usa por tenant ahora)
IMG_SIZE=224
SIMILARITY_THRESHOLD=0.8
SUGGESTION_THRESHOLD=0.3
TOP_N_SUGGESTIONS=3
SIMILARITY_THRESHOLD_SECONDARY=0.7

# Configuración de logging
LOG_LEVEL=info
NODE_ENV=development

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad
CORS_ORIGIN=http://localhost:3000
