# Backend Server Configuration
BACKEND_PORT=3000

# MongoDB Configuration (optional if not actively used by server.js)
MONGODB_URI=mongodb://127.0.0.1:27017/guideitor

# ONNX Model and Recognition Settings
# Paths can be absolute or relative to the backend directory (e.g., models/your_model.onnx)
MODEL_PATH=models/swin_t_best_model.onnx
LABELS_PATH=embeddings/dataset_embeddings.json
IMG_SIZE=224
SIMILARITY_THRESHOLD=0.8

# Audio Files Directory
# Path can be absolute or relative to the backend directory (e.g., public/audio)
AUDIO_DIR=public/audio

# Logging Level (e.g., 'fatal', 'error', 'warn', 'info', 'debug', 'trace' or 'silent')
# Pino will use 'info' if LOG_LEVEL is not set.
LOG_LEVEL=info

# Node environment (e.g., 'development', 'production')
# Influences logger formatting (pretty print in dev/default, JSON in prod)
# NODE_ENV=development

# Suggestion Threshold & Top-N for Low Confidence Recognitions
# If top-1 confidence is below SIMILARITY_THRESHOLD but above SUGGESTION_THRESHOLD,
# the API will return up to TOP_N_SUGGESTIONS.
SUGGESTION_THRESHOLD=0.3  # Example: minimum confidence for a class to be included in suggestions
TOP_N_SUGGESTIONS=3       # Example: return up to 3 suggestions

# Secondary Fallback Model Configuration
SECONDARY_MODEL_PATH=models/efficientnet_b0_model.onnx # User will need to replace with actual path
SIMILARITY_THRESHOLD_SECONDARY=0.6 # Example threshold for secondary model's confidence
